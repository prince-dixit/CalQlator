<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dixits.calqlator.MainActivity"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="0dp"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:layout_marginBottom="8dp"
        tools:fontFamily="sans-serif"
        android:textColor="@android:color/background_light"
        android:background="@android:color/holo_orange_light"
        android:gravity="bottom|right"
        android:paddingBottom="20dp"
        android:paddingRight="5dp"
        app:layout_constraintVertical_bias="0.0"
        android:textSize="30sp" />

    <Button
        android:text="CLEAR"
        android:layout_width="222dp"
        android:id="@+id/buttonclr"
        tools:background="@android:color/background_light"
        tools:fontFamily="sans-serif"
        android:gravity="left|center_vertical|center_horizontal"
        android:backgroundTint="@android:color/background_light"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="77dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        android:paddingLeft="45dp" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="145dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.2557319" />

    <Button
        android:text="DEl"
        android:layout_width="158dp"
        android:layout_height="77dp"
        android:id="@+id/buttondel"
        tools:background="@android:color/background_light"
        tools:fontFamily="sans-serif"
        android:paddingRight="30dp"
        android:textColor="@android:color/holo_orange_light"
        android:gravity="right|center_vertical|center_horizontal"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonclr"
        android:textSize="30sp" />


    <Button
        android:text="7"
        android:layout_height="81dp"
        android:id="@+id/button7"
        android:textColor="@android:color/black"
        tools:fontFamily="sans-serif"
        android:background="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonclr"
        android:layout_width="96dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonclr" />

    <Button
        android:text="8"
        android:id="@+id/button8"
        android:textColor="@android:color/black"
        android:background="@android:color/background_light"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="96dp"
        android:layout_height="81dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button7"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:fontFamily="sans-serif" />

    <Button
        android:text="9"
        android:id="@+id/button9"
        android:background="@android:color/background_light"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="96dp"
        android:layout_height="81dp"
        android:textColor="@android:color/black"
        android:fontFamily="sans-serif"
        app:layout_constraintBaseline_toBaselineOf="@+id/button8"
        app:layout_constraintLeft_toRightOf="@+id/button8" />

    <Button
        android:text="/"
        android:id="@+id/buttond"
        tools:background="@android:color/background_light"
        tools:fontFamily="sans-serif"
        tools:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        android:textColor="@android:color/holo_orange_light"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintBaseline_toBaselineOf="@+id/button9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/button9"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_width="88dp"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="4"
        android:id="@+id/button4"
        android:background="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        android:layout_width="96dp"
        android:layout_height="81dp"
        app:layout_constraintLeft_toLeftOf="@+id/button7" />

    <Button
        android:text="5"
        android:layout_width="96dp"
        android:id="@+id/button5"
        android:background="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="81dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        app:layout_constraintRight_toRightOf="@+id/button2" />

    <Button
        android:text="6"
        android:layout_width="96dp"
        android:id="@+id/button6"
        android:background="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        app:layout_constraintBaseline_toBaselineOf="@+id/button5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="81dp" />

    <Button
        android:text="*"
        android:id="@+id/buttonX"
        android:background="@android:color/background_light"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/button6"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="81dp"
        android:layout_width="88dp" />

    <Button
        android:text="1"
        android:id="@+id/button1"
        android:background="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        android:layout_width="96dp"
        android:layout_height="81dp"
        app:layout_constraintRight_toRightOf="@+id/button4" />

    <Button
        android:text="2"
        android:id="@+id/button2"
        android:background="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="96dp"
        android:layout_height="81dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button1" />

    <Button
        android:text="3"
        android:id="@+id/button3"
        android:background="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="96dp"
        android:layout_height="81dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button2"
        app:layout_constraintLeft_toRightOf="@+id/button2" />

    <Button
        android:text="-"
        android:layout_width="88dp"
        android:id="@+id/buttonm"
        android:textSize="30sp"
        android:textColor="@android:color/holo_orange_light"
        android:fontFamily="sans-serif"
        android:background="@android:color/background_light"
        android:elevation="0dp"
        app:layout_constraintRight_toRightOf="@+id/buttonX"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button3"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/button3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="81dp" />

    <Button
        android:text="."
        android:id="@+id/buttondot"
        android:background="@android:color/background_light"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="81dp"
        android:layout_width="96dp"
        app:layout_constraintLeft_toLeftOf="@+id/button1"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:text="0"
        android:id="@+id/button0"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:background="@android:color/background_light"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="81dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttondot"
        android:layout_width="96dp"
        app:layout_constraintRight_toRightOf="@+id/button2"
        app:layout_constraintLeft_toRightOf="@+id/button1"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:text="="
        android:id="@+id/buttone"
        android:background="@android:color/background_light"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="81dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button0"
        android:layout_width="96dp"
        app:layout_constraintLeft_toRightOf="@+id/button2" />

    <Button
        android:text="+"
        android:id="@+id/buttonp"
        android:fontFamily="sans-serif"
        android:background="@android:color/background_light"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="30sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/buttone"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_height="81dp"
        android:layout_width="88dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttone" />

</android.support.constraint.ConstraintLayout>
